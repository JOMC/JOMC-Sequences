<module xmlns="http://jomc.org/model"
        xmlns:standalone="http://jomc.org/standalone/model"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://jomc.org/model http://jomc.org/model/jomc-1.0.xsd
                            http://jomc.org/standalone/model http://jomc.org/standalone/model/jomc-standalone-1.0.xsd"
        name="${project.name}" version="${project.version}" vendor="${project.organization.name}" modelVersion="1.0">

  <documentation defaultLanguage="en">
    <text language="en">${project.description}</text>
  </documentation>

  <specifications>
    <!-- *********************************************************************************************************** -->
    <specification identifier="org.jomc.sequences.ri.SequenceMapper" class="org.jomc.sequences.ri.SequenceMapper"
                   classDeclaration="true" version="1.0" vendor="${project.organization.name}" scope="Singleton">

      <documentation defaultLanguage="en">
        <text language="en">Maps model classes.</text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@jomc.org" createDate="2005-07-25T19:56:45Z"/>
      </authors>
    </specification>
  </specifications>
  <implementations>
    <!-- *********************************************************************************************************** -->
    <implementation identifier="org.jomc.sequences.ri.DefaultSequenceDirectory"
                    class="org.jomc.sequences.ri.DefaultSequenceDirectory"
                    classDeclaration="true" name="${project.name}" vendor="${project.organization.name}"
                    version="${project.version}" stateless="true">

      <documentation defaultLanguage="en">
        <text language="en">SequenceDirectory reference implementation.</text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@jomc.org" createDate="2005-07-25T19:56:45Z"/>
      </authors>
      <specifications>
        <reference identifier="org.jomc.sequences.SequenceOperations" version="1.0"/>
        <reference identifier="org.jomc.sequences.SequenceDirectory" version="1.0"/>
      </specifications>
      <dependencies>
        <dependency name="Logger" identifier="org.jomc.logging.Logger" version="1.0">
          <properties>
            <property name="name" type="java.lang.String" value="org.jomc.sequences.ri.DefaultSequenceDirectory" override="true"/>
          </properties>
        </dependency>
        <dependency name="SequenceChangeListener" identifier="org.jomc.sequences.SequenceChangeListener" version="1.0"/>
        <dependency name="VetoableSequenceChangeListener" identifier="org.jomc.sequences.VetoableSequenceChangeListener" version="1.0"/>
        <dependency name="SequenceMapper" identifier="org.jomc.sequences.ri.SequenceMapper" version="1.0" implementationName="${project.name}"/>
        <dependency name="EntityManager" identifier="javax.persistence.EntityManager" implementationName="JOMC Standalone RI" bound="false"/>
        <dependency name="Locale" identifier="java.util.Locale" version="1.1" implementationName="default"/>
      </dependencies>
      <properties>
        <property name="directoryName" type="java.lang.String" value="${project.name}">
          <documentation defaultLanguage="en">
            <text language="en">Name uniquely identifying the directory in a set of directories.</text>
          </documentation>
        </property>
      </properties>
      <messages>
        <reference name="illegalArgument"/>
        <reference name="successfullyCreatedSequenceDirectory"/>
      </messages>
      <methods xmlns="http://jomc.org/standalone/model" system-exception="org.jomc.sequences.SequencesSystemException">
        <transaction type="Required"/>
      </methods>
    </implementation>
    <!-- *********************************************************************************************************** -->
    <implementation identifier="org.jomc.sequences.ri.DefaultSequenceMapper"
                    class="org.jomc.sequences.ri.DefaultSequenceMapper"
                    classDeclaration="true" name="${project.name}" version="${project.version}"
                    vendor="${project.organization.name}" stateless="true">

      <documentation defaultLanguage="en">
        <text language="en">SequenceMapper reference implementation.</text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@jomc.org" createDate="2005-07-25T19:56:45Z"/>
      </authors>
      <specifications>
        <reference identifier="org.jomc.sequences.ri.SequenceMapper" version="1.0"/>
      </specifications>
      <dependencies>
        <dependency name="Locale" identifier="java.util.Locale" version="1.1" implementationName="default"/>
      </dependencies>
      <messages>
        <reference name="unhandledException"/>
        <reference name="illegalArgument"/>
      </messages>
    </implementation>
    <!-- *********************************************************************************************************** -->
    <implementation identifier="org.jomc.sequences.ri.DefaultSequenceChangeListener"
                    class="org.jomc.sequences.ri.DefaultSequenceChangeListener"
                    classDeclaration="true" name="${project.name}" version="${project.version}"
                    vendor="${project.organization.name}" stateless="true">

      <documentation defaultLanguage="en">
        <text language="en">SequenceChangeListener reference implementation.</text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@jomc.org" createDate="2005-07-25T19:56:45Z"/>
      </authors>
      <specifications>
        <reference identifier="org.jomc.sequences.SequenceChangeListener" version="1.0"/>
      </specifications>
      <dependencies>
        <dependency name="Logger" identifier="org.jomc.logging.Logger" version="1.0">
          <properties>
            <property name="name" type="java.lang.String" value="org.jomc.sequences.ri.DefaultSequenceChangeListener" override="true"/>
          </properties>
        </dependency>
        <dependency name="Locale" identifier="java.util.Locale" version="1.1" implementationName="default"/>
      </dependencies>
      <messages>
        <message name="operationInfo">
          <template defaultLanguage="en">
            <text language="en"><![CDATA[Directory update
    --''{0}''
    ++''{1}'']]>
            </text>
            <text language="de"><![CDATA[Verzeichnisänderung
    --''{0}''
    ++''{1}'']]>
            </text>
          </template>
          <arguments>
            <argument index="0" name="oldSequenceInfo"/>
            <argument index="1" name="newSequenceInfo"/>
          </arguments>
        </message>
      </messages>
    </implementation>
    <!-- *********************************************************************************************************** -->
    <implementation identifier="org.jomc.sequences.ri.DefaultVetoableSequenceChangeListener"
                    class="org.jomc.sequences.ri.DefaultVetoableSequenceChangeListener" classDeclaration="true"
                    name="${project.name}" version="${project.version}" vendor="${project.organization.name}"
                    stateless="true">

      <documentation defaultLanguage="en">
        <text language="en">VetoableSequenceChangeListener reference implementation.</text>
      </documentation>
      <authors>
        <author name="Christian Schulte" version="1.0" mail="cs@jomc.org" createDate="2005-07-25T19:56:45Z"/>
      </authors>
      <specifications>
        <reference identifier="org.jomc.sequences.VetoableSequenceChangeListener" version="1.0"/>
      </specifications>
    </implementation>
  </implementations>
  <messages>
    <message name="unhandledException">
      <template defaultLanguage="en">
        <text language="en">Unhandled exception.</text>
        <text language="de">Unbehandelte Ausnahme.</text>
      </template>
    </message>
    <message name="illegalArgument">
      <template defaultLanguage="en">
        <text language="en">Illegal value ''{1}'' for argument ''{0}''.</text>
        <text language="de">Ungültiger Wert ''{1}'' für Parameter ''{0}''.</text>
      </template>
      <arguments>
        <argument index="0" name="argumentName"/>
        <argument index="1" name="argumentValue"/>
      </arguments>
    </message>
    <message name="implementationInfo">
      <template defaultLanguage="en">
        <text language="en">DefaultSequenceDirectory Version ${project.version}</text>
        <text language="de">DefaultSequenceDirectory Version ${project.version}</text>
      </template>
    </message>
    <message name="successfullyCreatedSequenceDirectory">
      <template defaultLanguage="en">
        <text language="en">Sequence directory ''{0}'' created.</text>
        <text language="de">Sequenzverzeichnis ''{0}'' erstellt.</text>
      </template>
      <arguments>
        <argument index="0" name="name"/>
      </arguments>
    </message>
  </messages>
</module>
